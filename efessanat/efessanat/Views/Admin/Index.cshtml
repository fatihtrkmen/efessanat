@model efessanat.Models.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Assets/LTE/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Assets/LTE/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Assets/LTE/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Assets/LTE/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Assets/LTE/square/blue.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Efes</b>Sanat</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Yönetici Girişi</p>
@using (Html.BeginForm("checkUser", "Admin", FormMethod.Post, new { @class = "login-form" }))
{
    @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(u => u.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" , required = "required" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Şifre" , required = "required" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Giriş</button>
                        
                    </div>
                    
                    <!-- /.col -->
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        @Html.ValidationSummary(true, "")
                    </div>
                    
                    </div>
                    
                    }
                    @*<div class="social-auth-links text-center">
                            <p>- OR -</p>
                            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                                <i class="fa fa-facebook"></i> Sign in using
                                Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                                <i class="fa fa-google-plus"></i> Sign in using
                                Google+
                            </a>
                        </div>*@
                    <!-- /.social-auth-links -->
                    @*<a href="#">I forgot my password</a><br>
                        <a href="register.html" class="text-center">Register a new membership</a>*@
                </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Assets/LTE/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Assets/LTE/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Assets/LTE/icheck.min.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>
</html>
